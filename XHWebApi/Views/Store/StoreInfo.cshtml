
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,initial-scale=1.0,width=device-width" />
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>页面头部导航</title>
    <link href="~/Scripts/Common/Common.css" rel="stylesheet" />
    <link href="~/Scripts/Bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jQuery/jquery-2.2.3.js"></script>
    <script src="~/Scripts/Knockout/knockout-3.3.0.js"></script>
    <script src="~/Scripts/Bootstrap/js/bootstrap.min.js"></script>
   
    <script src="~/Content/Store/StoreInfo.js"></script>
</head>
<body>
<div class="panel-body">
    <div class="dataTable_wrapper">
        <table class="table table-hover table-lg" id="dataTables_list">
            <thead>
            <tr>
                <th></th>
                <th>序号</th>
                <th>名称</th>
                <th>经度</th>
                <th>纬度</th>
                <th>地址</th>
                <th>电话</th>
                <th>营业时间</th>
                <th>
                    <button  class="btn btn-primary btn-lg" data-toggle="modal" data-target="#storeDetailModal">+</button>   
                </th>
            </tr>
            </thead>
            <tbody>
            <!-- ko foreach: Store_List -->
            <tr>
                <td></td>
                <td data-bind="text:StoreID"></td>
                <td data-bind="text:Name"></td>
                <td data-bind="text:ImgLongitude"></td>
                <td data-bind="text:ImgLatitude"></td>
                <td data-bind="text:Address"></td>
                <td data-bind="text:Telephone"></td>
                <td data-bind="text:OpeningTime"></td>
                <td><button  class="btn btn-primary btn-lg" data-bind="click:$root.del">-</button></td>
            </tr>
            <!-- /ko -->
            </tbody>
        </table>
    </div>
    <!-- /.table-responsive -->

</div>

    <div class="modal fade" id="storeDetailModal">
        <div class="modal-dialog" >
            <div class="modal-content" >
                <div class="modal-header">
                 
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="myModalLabel" >分店信息-新增</h4>
</div>
                <div class="modal-body" id="modalcontent">
                            <ul>
                                <li>序号：<input type="text" id="inputStoreID" data-bind="text:StoreID" class="form-control"  /> </li>
                            <li>名称：<input type="text" id="inputName" data-bind="text:Name" class="form-control" /></li>
                            <li>经度：<input type="text" id="inputImgLongitude" data-bind="text:ImgLongitude" class="form-control" /> </li>
                            <li>纬度：<input type="text" id="inputImgLatitude" data-bind="text:ImgLatitude" class="form-control" /> </li>
                            <li>地址：<input type="text" id="inputAddress" data-bind="text:Address" class="form-control" /> </li>
                            <li>电话：<input type="text" id="inputTelephone" data-bind="text:Telephone" class="form-control" /> </li>
                            <li>营业时间：<input type="text" id="inputOpeningTime" data-bind="text:OpeningTime" class="form-control" /> </li>
                            </ul>
                    </div>
                <div class="modal-footer" >
                    <button class="btn btn-default" data-dismiss="modal" >取消</button>
                    <button class="btn btn-primary" data-bind="click:$root.save">保存</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</body>
</html>
<script type="text/javascript">
    var viewModel = null;
    $(function() {
        viewModel = new StoreInfoViewModel();
        ko.applyBindings(viewModel, document.getElementsByTagName('body')[0]);
        viewModel. Refresh();
        viewModel.Init();
    });

    

    
</script>